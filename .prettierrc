{
	"trailingComma": "none",
	"tabWidth": 2,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	],
	"importOrder": [
		"^(next/(.*)$)|^(next$)|^(react$)",
		"<THIRD_PARTY_MODULES>",
		"^@/components/(.*)$",
		"^@/lib/(.*)$",
		"(^[../])|(^[./])"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
